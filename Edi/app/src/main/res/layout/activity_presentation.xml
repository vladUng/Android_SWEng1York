<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_presentation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.i2lc.edi.PresentationActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0.2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_dark"
        android:maxHeight="80dp"
        android:minHeight="65dp"
        android:progress="60"
        android:progressBackgroundTint="@android:color/holo_blue_dark"
        android:progressTint="@color/colorAccent"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/progressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "30"/>

    <EditText
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight = "20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/progressBar"
        android:background="@color/icons"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:text="Cancel"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/testData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "30"/>


    <Button
        android:id="@+id/askButton"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/questionText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/questionText"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_weight="0.2"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:drawableLeft="@drawable/question"
        android:drawableStart="@drawable/question"
        android:elevation="0dp"
        android:text="  Ask "
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>
